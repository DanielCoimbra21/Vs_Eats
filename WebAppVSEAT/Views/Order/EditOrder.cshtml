                    @Html.HiddenFor(modelItem => Model.orderDishes[i].IDRESTAURANT)
                    @Html.HiddenFor(modelItem => Model.IDRESTAURANT)
                    @Html.HiddenFor(modelItem => Model.IDORDER)
                </h4>
                <h4>
                    @Html.DisplayFor(modelItem => Model.orderDishes[i].PRICEDISH) CHF
                    @Html.HiddenFor(modelItem => Model.orderDishes[i].PRICEDISH)
                </h4>
                <h4 style="align-content:center">
                    @Html.TextBoxFor(m => Model.orderDishes[i].QUANTITY)
                    @Html.HiddenFor(modelItem => Model.orderDishes[i].QUANTITY)
                    @Html.DisplayFor(modelItem => Model.hour) 
