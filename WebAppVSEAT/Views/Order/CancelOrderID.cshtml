@model WebAppVSEAT.Models.CancelOrderVM

@{
    ViewData["Title"] = "CancelOrderID";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-family: 'Palatino Linotype'; text-align: center;">Cancel Order</h1>

<hr />
<div class="wrapper fadeInDown">
    <div id="formContent">
        <center>
            <div class="row justify-content-center align-content-center">
                <div class="col-sm-12 col-md-12 col-lg-4">
                    <form method="post" asp-controller="Order" asp-action="CancelOrder">
                        <div asp-validation-summary="All" class="text">

                        </div>
                        <div class="form-group">
                            <h6>Order Number</h6>
                            <label class="col-form-label" asp-for="IDORDER" />
                            <input type="text" asp-for="IDORDER" class="form-control fadeIn second" placeholder="name" />

                        </div>
                        <div class="form-group">
                            <h6>First Name</h6>
                            <label class="col-form-label" asp-for="NAME" />
                            <input type="text" asp-for="NAME" class="form-control fadeIn second" placeholder="name" />
                        </div>
                        <div class="form-group">
                            <h6>Last Name</h6>
                            <label class="col-form-label" asp-for="SURNAME" />
                            <input type="text" asp-for="SURNAME" class="form-control fadeIn second" placeholder="surname" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Cancel Order" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </center>
    </div>
</div>


<div>
    <a asp-action="Orders">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
