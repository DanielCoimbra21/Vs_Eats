@model WebAppVSEAT.Models.CustomerVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="wrapper fadeInDown">
    <div id="formContent">
        <center>
            <div class="row justify-content-center align-content-center">
                <div class="col-sm-12 col-md-12 col-lg-4">
                    <form method="post">
                        <div asp-validation-summary="All" class="text">

                        </div>
                        <div class="hide">
                            <input asp-for="IDCUSTOMER" type="hidden" class="form-control" />
                            <span asp-validation-for="IDCUSTOMER" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h6>Name</h6>
                            <label class="col-form-label" asp-for="NAME" />
                            <input type="text" asp-for="NAME" class="form-control fadeIn second" placeholder="name" />
                        </div>
                        <div class="form-group">
                            <h6>Surname</h6>
                            <label class="col-form-label" asp-for="SURNAME" />
                            <input type="text" asp-for="SURNAME" class="form-control fadeIn second" placeholder="surname" />
                        </div>
                        <div class="form-group">
                            <h6>Username</h6>
                            <label class="col-form-label" asp-for="USERNAME" />
                            <input type="text" asp-for="USERNAME" class="form-control fadeIn second" placeholder="username" />
                        </div>
                        <div class="form-group">
                            <h6>Phone Number</h6>
                            <label class="col-form-label" asp-for="PHONE" />
                            <input type="text" asp-for="PHONE" class="form-control fadeIn second" placeholder="phonenumber" />
                        </div>
                        <div class="form-group">
                            <h6>Address</h6>
                            <label class="col-form-label" asp-for="ADDRESS" />
                            <input type="text" asp-for="ADDRESS" class="form-control fadeIn second" placeholder="address" />
                        </div>
                        <div class="form-group">
                            <h6>City</h6>
                            <label class="col-form-label" asp-for="CITYNAME" />
                            <input type="text" list="cities" asp-for="CITYNAME" class="form-control fadeIn second" placeholder="city" />
                            <datalist id="cities">
                                <option value="Martigny">Martigny</option>
                                <option value="Brigue">Brigue</option>
                                <option value="Vétroz">Vétroz</option>
                                <option value="Le Châble">Le Châble</option>
                                <option value="Hérémence">Hérémence</option>
                                <option value="Massongex">Massongex</option>
                                <option value="Turtmann">Turtmann</option>
                                <option value="Loèche-Les-Bains">Loèche-Les-Bains</option>
                                <option value="Epinassey">Epinassey</option>
                                <option value="Savièse">Savièse</option>
                                <option value="Baltschieder">Baltschieder</option>
                            </datalist>
                            <span asp-validation-for="CITYNAME" class="text-danger fadeIn second"></span>
                        </div>
                        <div class="hide">
                            <input asp-for="IDCITY" hidden type="number" class="form-control" />
                            <span asp-validation-for="IDCITY" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h6>Email</h6>
                            <label class="col-form-label" asp-for="MAIL" />
                            <input type="text" asp-for="MAIL" class="form-control fadeIn second" placeholder="mail" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>  
        </center>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
