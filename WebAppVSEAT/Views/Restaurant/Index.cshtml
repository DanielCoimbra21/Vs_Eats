@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CITYNAME)
            </td>
            <td>
                @Html.ActionLink(item.NAMERESTAURANT, "Details2", new { id=item.IDRESTAURANT })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ADDRESSRESTAURANT)
            </td>
        </tr>
}
