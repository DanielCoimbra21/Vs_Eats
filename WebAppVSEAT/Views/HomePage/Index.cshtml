@model WebAppVSEAT.Models.HomePageVM

@{
    ViewData["Title"] = "Index";
}

<p>
        <h1 style="font-family: 'Palatino Linotype'; text-align: center;" >Welcome to VSEat</h1>
</p>

<p>
    <center>
        <h3>All of the Restaurants available in our app</h3>
    </center>
</p>

<div class="containerHomePage">


    @foreach (var item in Model.restaurantVMS)
    {
        string imageUrl = "Images/Restaurant/" + item.IDRESTAURANT + ".jpg";

        <div class="containerColumnHomePage">
            <img src="~/@imageUrl" alt="@Html.DisplayFor(modelItem => item.IDRESTAURANT)" width="250" height="250" />
            <h4>
                @Html.ActionLink(item.NAMERESTAURANT, "Details", "Restaurant", new { id = item.IDRESTAURANT }, null)
            </h4>
            <h4>
                @Html.DisplayFor(modelItem => item.ADDRESSRESTAURANT)
            </h4>
            <h4>
                @Html.DisplayFor(modelItem => item.CITYNAME)
            </h4>
        </div>

    }

</div>

<p>
    <center>
        <h3>All Cities</h3>
    </center>
</p>


<div class="containerHomePage">


    @foreach (var item in Model.citiesVMS)
    {
        string imageUrl = "Images/Cities/" + item.IDCITY + ".jpg";

        <div class="containerColumnHomePage">
            <img src="~/@imageUrl" alt="@Html.DisplayFor(modelItem => item.IDCITY)" width="250" height="250" />
            <h4>
                @Html.ActionLink(item.CITYNAME, "Index", "Restaurant", new {searchBy = "City" , search = item.CITYNAME }, null)
            </h4>
        </div>

    }

</div>