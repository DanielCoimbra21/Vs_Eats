@model WebAppVSEAT.Models.LoginVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div>
    @Html.ActionLink("Create an account", "CreateCustomer", new { /* id = Model.PrimaryKey */ })
</div>
<hr />

<div class="container mt-5">
    <div class="row justify-content-center align-content-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <form method="post">
                <div asp-validation-summary="All" class="text">

                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="mail">Mail</label>
                    <input type="text" asp-for="mail" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="password">Password</label>
                    <input type="text" asp-for="password" type="password" class="form-control" />
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}